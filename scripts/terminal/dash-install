#!/usr/bin/env sh
set -e
REPO_DIR="$(git install -k https://git.kernel.org/pub/scm/utils/dash/dash.git)"
cd "$REPO_DIR"
git checkout "$(git describe --abbrev=0 --tags)"
./autogen.sh
./configure
make -j8
mkdir -p "$HOME/.bin"
# copy instead of symlink to avoid issue if link becomes invalid
cp "$PWD/src/dash" "$HOME/.bin/dash"
cp "$PWD/src/dash" "$HOME/.bin/sh"
