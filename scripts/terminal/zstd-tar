#!/usr/bin/env sh
set -eu
RM=1
if [ "$1" = '--keep' ]; then
    RM=
    shift
fi

if [ $# -ne 1 ]; then
    exit 1
fi

SOURCE="$(realpath "$1")"
DEST="$(basename "$SOURCE").tar.zst"

if [ -f "$SOURCE" ]; then
    tar cf - -C "$(dirname "$SOURCE")" "$(basename "$SOURCE")" | zstd -T0 --ultra -22 -o "$DEST"
elif [ -d "$SOURCE" ]; then
    find "$SOURCE" -printf '%P\0' | tar cf - -C "$SOURCE" --no-recursion --verbatim-files-from --null -T - | zstd -T0 --ultra -22 -o "$DEST"
else
    exit 1
fi
if [ -n "$RM" ]; then
    rm -rf "$SOURCE"
fi
