#!/bin/sh
set -e

DOCKER_IMAGE=nvllsvm/lgogdownloader
GOG_DIR=/mnt/storage1/Games/PC/GOG.com

docker pull $DOCKER_IMAGE > /dev/null
docker run \
    --rm \
    -e PUID=1000 \
    -e PGID=100 \
    -v $GOG_DIR:/downloads \
    -v ~/.cache/lgogdownloader:/cache \
    -v ~/Code/Private/dotfiles-private/lgogdownloader:/config \
    $DOCKER_IMAGE
