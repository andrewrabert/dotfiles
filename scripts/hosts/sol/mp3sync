#!/usr/bin/env sh
set -e
IMAGE=nvllsvm/harmonize:dev

SOURCE=/storage/Audio/Library
TARGET=/storage/Audio/MP3

docker pull "$IMAGE" > /dev/null

harmonize() {
    docker run \
        --rm \
        --user "$(id -u):$(id -g)" \
        -v "$SOURCE:$SOURCE" \
        -v "$TARGET:$TARGET" \
        "$IMAGE" "$@"
}

harmonize -n 8 "$SOURCE" "$TARGET"
