#!/usr/bin/env sh
options() {
    cat << EOF
at-monitor-desk
at-tv-desk
closet-lights
desk-lamp
fan-light
fan-max
fan-off
fan-silent
dark
on
on-cool
studio-monitors-on
studio-monitors-off
sound-tv
sound-schiit-fulla
EOF
}

OPTION="$(options | rofi -dmenu -p '' -i)"
case "$OPTION" in
    sound-tv)
        pactl-set-only --profile 'Navi 21/23 HDMI/DP Audio Controller' 'Digital Stereo (HDMI 3) Output'
        ;;
    sound-schiit-fulla)
        pactl-set-only --profile "I'm Fulla Schiit" 'Pro Audio'
        ;;
    *)
        if [ -n "$OPTION" ]; then
            hass office-"$OPTION"
        fi
esac
