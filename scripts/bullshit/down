if command -v play > /dev/null; then
    decode_audio | play - > /dev/null 2>&1 &
elif command -v play > /dev/null; then
    decode_audio | mpv - > /dev/null 2>&1 &
else
    echo 'error: requires either play (sox) or mpv' >&2
    exit 1
fi
