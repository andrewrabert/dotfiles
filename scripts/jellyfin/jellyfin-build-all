#!/usr/bin/env sh
set -uex

IMAGE="jellyfin/jellyfin"
VERSION="$1"
if [ -z "$VERSION" ]; then
    echo error: must specify version >&2
    exit 1
fi

docker run --rm --privileged multiarch/qemu-user-static:register || true

docker build . -t "${IMAGE}":$VERSION-amd64 --no-cache -f Dockerfile
docker build . -t "${IMAGE}":$VERSION-arm --no-cache -f Dockerfile.arm
docker build . -t "${IMAGE}":$VERSION-arm64 --no-cache -f Dockerfile.arm64

docker push "${IMAGE}":$VERSION-amd64
docker push "${IMAGE}":$VERSION-arm64
docker push "${IMAGE}":$VERSION-arm

for tag in "${VERSION}" latest; do
    docker manifest create "${IMAGE}:${tag}" \
        "${IMAGE}:${VERSION}-arm64" \
        "${IMAGE}:${VERSION}-amd64" \
        "${IMAGE}:${VERSION}-arm"

    docker manifest push --purge "${IMAGE}:${tag}"
done
