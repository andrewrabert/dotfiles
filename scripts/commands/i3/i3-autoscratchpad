#!/usr/bin/env python3
import i3ipc

NAME = 'i3-scratchpad'


def on_window_focus(self, e):
    if e.container.name != NAME:
        CONN.command(f'[title={NAME}] move scratchpad')


CONN = i3ipc.Connection()
try:
    CONN.on('window::focus', on_window_focus)
    CONN.main()
finally:
    CONN.main_quit()
