#!/usr/bin/env sh
notify() {
    dunstify \
        --hints=string:x-dunst-stack-tag:nmcli-toggle \
        "$@"
}

case "$(nmcli networking)" in
    enabled)
        nmcli networking off
        notify 'Networking Disabled' ðŸš«
        ;;
    disabled)
        nmcli networking on
        notify 'Networking Enabled' ðŸ“¶
        ;;
    *)
        echo 'error: unknown status' >&2
        exit 1
esac
