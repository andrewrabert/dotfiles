reset_calibration_all_outputs() {
    dispwin -h 2>&1 | grep Output | awk '{print $1}' | xargs -n 1 dispwin -c -d > /dev/null 2>&1
}

connected_outputs() {
    xrandr | grep ' connected ' | awk '{print $1}'
}


