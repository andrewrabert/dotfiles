apply_calibration() {
    OUTPUT="$1"
    PROFILE="$2"
    for dispwin_number in $(dispwin -h 2>&1 | grep Output | awk '{print $1}'); do
        dispwin_output="$(dispwin -h 2>&1 | grep Output | awk '{print $1, $6}' | grep "^${dispwin_number} " | awk '{print $2}')"
