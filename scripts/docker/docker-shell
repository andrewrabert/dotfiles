#!/usr/bin/env bash
container_name="docker_shell-$(uuidgen | tr -d -)"
trap "docker kill "${container_name}" >& /dev/null || true" SIGHUP EXIT

args=()
if [[ $1 == '-s' ]]; then
    shift;
    args=(--entrypoint /bin/sh "${args[@]}")
fi

args=("${args[@]}" "$@")

docker run --rm -it --name "${container_name}" "${args[@]}"
