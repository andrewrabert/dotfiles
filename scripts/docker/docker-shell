#!/usr/bin/env sh
container_name="docker_shell-$(cat /dev/urandom | tr -cd 'a-f0-9' | head -c 32)"
trap "docker kill "${container_name}" > /dev/null 2>&1" HUP EXIT
if [ -t 0 -a -t 1 -a -t 2 ]; then
    docker run --rm -i --name "${container_name}" -t "$@"
else
    docker run --rm -i --name "${container_name}" "$@"
fi
