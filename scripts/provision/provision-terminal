#!/usr/bin/env sh
set -e

if command -v brew > /dev/null; then
    brew install \
        bat \
        coreutils \
        curl \
        dash \
        diffutils \
        direnv \
        docker-completion \
        docker-compose-completion \
        fd \
        findutils \
        fzf \
        gawk \
        git \
        gnu-sed \
        gnu-tar \
        grep \
        htop \
        jq \
        kubectl \
        kubernetes-helm \
        neovim \
        openssh \
        ripgrep \
        stern \
        tmux \
        zsh
fi

if command -v yay > /dev/null; then
    yay -Syu --needed --noconfirm \
        aria2 \
        bat \
        bind-tools \
        dash \
        fd \
        fzf \
        htop \
        jq \
        moreutils \
        neovim \
        openssh \
        perl-image-exiftool \
        pkgfile \
        python \
        ripgrep \
        rsync \
        tmux \
        zsh
fi

if command -v termux-info > /dev/null; then
    pkg install \
        bat \
        dash \
        dnsutils \
        fd \
        fzf \
        htop \
        jq \
        lf \
        neovim \
        openssh \
        python \
        ripgrep \
        tmux \
        zsh
fi

if command -v apk > /dev/null; then
    apk add \
        bat \
        curl \
        dash \
        fd \
        fzf \
        g++ \
        gcc \
        git \
        htop \
        jq \
        musl-dev \
        neovim \
        openssh \
        python3 \
        python3-dev \
        ripgrep \
        rsync \
        tmux \
        zsh \
        zstd
fi

if command -v pip > /dev/null; then
    pip install \
        flake8 \
        pyright \
        pint \
        speedtest-cli \
        virtualenv
fi
