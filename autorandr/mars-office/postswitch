#!/usr/bin/env sh
set-desktop-themes --dpi 96

pactl set-card-profile alsa_card.usb-Schiit_Audio_USB_Modi_Device-00 pro-audio
pactl set-card-profile alsa_card.usb-audio-technica_AT2020USB_-00 pro-audio
pactl set-card-profile alsa_card.pci-0000_0d_00.4 off
pactl set-card-profile alsa_card.pci-0000_0b_00.1 off

apply-display-calibration
