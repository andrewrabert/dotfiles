#!/usr/bin/env sh
set -eu
if ! command -v zsh > /dev/null; then
    rm -rf ~/.zshenv
    rm -rf ~/.zshrc
    rm -rf ~/.zlogin
else
    ln -sfT "${DOTFILES}/zsh/.zshenv" ~/.zshenv
    ln -sfT "${DOTFILES}/zsh/.zshrc" ~/.zshrc

    if [ -n "$HOST" ] && [ -f "${DOTFILES}/zsh/hosts/${HOST}/.zlogin" ]; then
        ln -sfT "${DOTFILES}/zsh/hosts/${HOST}/.zlogin" ~/.zlogin
    fi
    rm -f ~/.zcompdump
    zsh -ic 'echo -n'
fi
