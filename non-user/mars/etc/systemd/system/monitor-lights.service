[Unit]
Description=monitor lights
After=NetworkManager-wait-online.service

[Service]
ExecStart=sleep 10 && /home/ar/.dotfiles/private/scripts/hosts/mars/monitor-lights on
ExecStop=/home/ar/.dotfiles/private/scripts/hosts/mars/monitor-lights off
RemainAfterExit=true
Type=oneshot

[Install]
WantedBy=multi-user.target
