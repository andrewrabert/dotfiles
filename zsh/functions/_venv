#compdef venv

typeset -A opt_args

_venv() {

  # Global flags (i.e. ones not associated with a subcommand)
  _arguments \
    '(-h --help)'{-h,--help}'[show this help message and exit]' \
    '--prune[remove orphan virtual envs]' \
    '(-d --delete)'{-d,--delete}'[delete the current virtual env]'

}
_venv
