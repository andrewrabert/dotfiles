general {
    colors = true
    interval = 30
    separator = "    "
    output_format = "None"
}

order += "battery all"
order += "volume master"
order += "tztime local"

volume master {
    device = "pulse"
    format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
}

battery all {
    format = "%status %percentage"
    integer_battery_capacity = true
    format_down = ""
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}
